<Page x:Class="_4th_point_13_11.pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_4th_point_13_11.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" Height="850" Width="800" >

    <Grid>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Height="80" Width="800" Background="#FF76E383">
            <Image Source="resources/logo.png" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20, 0 ,0, 0"></Image>
            <Image Source="resources/logo.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 0 ,20, 0"></Image>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="30" Text="ИС по прокату спортивного инвентаря"></TextBlock>
        </Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="80" Width="800">
            <Button x:Name="ApplyChangesButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="190" Height="50" Content="Внести" FontFamily="Comic Sans MS" FontSize="15"/>
            <Button x:Name="GoBackButton" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="30" Content="Назад" FontFamily="Comic Sans MS" FontSize="15" Margin="30, 0, 0, 0"></Button>
        </Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="350">
            <ListBox Background="#FF76E383">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"></TextBlock>

                <TextBox HorizontalAlignment="Right" Height="20" Width="350" Margin="230, 0, 0, 0"></TextBox>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
                <ComboBox Height="20" Width="350" Margin="230, 5, 0, 0"></ComboBox>
                <DataGrid Height="20" Width="350" Margin="230, 5, 0, 0"></DataGrid>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
                <ComboBox Height="20" Width="350" Margin="230, 5, 0, 0"></ComboBox>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
                <TextBox Height="20" Width="350" Margin="230, 5, 0, 0"></TextBox>
            </ListBox>
        </Grid>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="150" Width="400" Margin="0, 0, 0, 75">
            <TextBlock Text="Здест будут выводиться ошибки" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="15" Foreground="Red" Margin="0, 25" FontWeight="Bold"></TextBlock>
            <TextBlock Text="Здест текст о подтверждении изменений" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="15" Foreground="#FF498C51" FontWeight="Bold"></TextBlock>
        </StackPanel>

        <Frame x:Name="AddUsersPage" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
